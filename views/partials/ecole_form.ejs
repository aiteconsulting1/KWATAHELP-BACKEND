<form class="ecoleformulairesave" enctype="multipart/form-data">
    <input type="hidden" class="id_user" value="no">
    <input type="type" class="id_user" value="no">
    <div class="row">
        
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Nom et prénom *</label>
                <input type="text" required class="form-control" placeholder="Nom et prenom" name="name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Adresse mail</label>
                <input type="email" class="form-control" placeholder="Adresse mail" name="email">
            </div>
        </div>
  
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Téléphone *</label>
                <input type="text" name="phone"  class="form-control zcode30" required placeholder="Téléphone" data-intl-tel-input-id="0">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">Photo</label>
                <input type="file" class="form-control" name="image">
            </div>
        </div>
       
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Quartier *</label>
                <select name="pays" required aria-placeholder="Pays" class="selectpicker countrypicker countrypickerpaysecole" data-default="CM" data-flag="true"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="">Ville *</label>
                <input required type="text" placeholder="Ville" class="form-control" name="ville">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="">Adresse</label>
                <input type="text" placeholder="Adresse" class="form-control" name="adresse">
            </div>
        </div>
       
        <div class="col-md-12" style="display: flex;justify-content: center;">
            <button class="btn-hover btn-border-radius color-7 submit_all_ecole" type="submit" attr-type="save">Sauvegarder</button>
        </div>
    </div>
</form>
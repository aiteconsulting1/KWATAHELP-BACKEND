<%- include('../partials/header') -%> 
<style>
    .avatarimg{
        border-radius: 50%;
        width: 4rem;
        height: 4rem;
        object-fit: cover;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;"><%= title %> </h3>
                        <h5 style="margin-top: 1rem;"><%= users.length %> Utilisateur(s)</h5>
                        <div class="header-dropdown m-r--5">
                            <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/users/add/<%= type %>'">Ajouter</button>
                        </div>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Avatar</th>
                                        <th>Nom et prénom</th>
                                        <th>Téléphone</th>
                                        <th>Adresse</th>
                                        <th>Inscrit(e) le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user)=>{ %>
                                    <tr>
                                        <td>
                                            <img width="25" src="<%= user.image %>" alt="<%= user.name %>" class="avatarimg">
                                        </td>
                                        <td>
                                            <%= user.name %> &nbsp;&nbsp;
                                         
                                        </td>
                                        <td><%= user.phone %></td>
                                        <td><%= user.idQuartier.name %>, <%= user.idQuartier.idVille.name %>, <%= user.idQuartier.idVille.idRegion.name %>, <%= user.idQuartier?.idVille?.idRegion?.idPays?.name %></td>
                                        
                                        <td><%= user &&  new Date(user?.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <!-- <a href="/user/details/<%= user.id %>" class="btn-hover btn-border-radius color-4 p-1"><i class="fa fa-eye"></i> View</a>
                                            <a href="/edit/<%= user.id %>" class="btn-hover btn-border-radius color-6 p-3"><i class="fa fa-edit"></i> edit</a> -->
                                            <!-- <a href="/dashboard/users/view/<%= user.id %>" class="btn btn-tbl-edit btn-primary" title="Voir">
                                                <i class="material-icons">remove_red_eye</i>
                                            </a> -->

                                            <a href="/dashboard/users/edit/<%= user.id %>/<%= type %>" class="btn btn-tbl-edit" title="Modifier">
                                                <i class="material-icons">create</i>
                                            </a>
                                            <a href="/dashboard/user-delete/<%= user.id %>" class="btn btn-tbl-edit btn-danger delete" title="Supprimer">
                                                <i class="material-icons">delete_sweep</i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
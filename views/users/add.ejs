<%-include('../partials/header')-%> 
<style>
    input[type=text], input[type=email]{
      border: 1px solid #0f3042 !important;
      border-radius: 5px !important;
      background: transparent !important;
      padding: 0px 7px !important;
    }
    input[type=text]:focus, input[type=email]:focus{
      border: 1px solid #78ae61 !important;
      -webkit-box-shadow: 0 1px 0 0 #78ae61 !important;
      box-shadow: 0 1px 0 0 #78ae61 !important;
    }
    .form-group .form-control{
        width: 97% !important;
    }
    .eleve_form, .ecole_form{
        display: none;
        margin-top: 1rem;
    }
    .usertype_selector h3{
        text-align: center;
    }
    .usertype_selector{
        border: 1px #4169a3 solid;
        color: black;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector.active{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector:hover{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        -webkit-transition: background-color 400ms linear;
        -ms-transition: background-color 400ms linear;
        transition: background-color 400ms linear;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
        cursor: pointer;
    }
    .divselectorentoure{
        padding: 1rem;
    }
    .addinguser hr{
        width: 100%;
        margin-bottom: 2rem;
        border-top: 2px solid rgb(64 104 163);
    }
</style>
<section class="content addinguser">
    <div class="container-fluid">
        <div class="content" style="padding-top:30px;">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <%= page %>
                                </h2>
                            </div>
                            <div class="body">
                                <form class="ecoleformulairesave" enctype="multipart/form-data">
                                    <input type="hidden" name="id_user" value="<%= user?._id||'no' %>">
                                    <input type="hidden" value="<%= type %>" name="type">
                                    <div class="row">
                                        
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Nom et prénom *</label>
                                                <input type="text" required class="form-control" value="<%= user?.name %>" placeholder="Nom et prenom" name="name">
                                            </div>
                                        </div>
                                        <!-- <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Adresse mail</label>
                                                <input type="email" class="form-control" placeholder="Adresse mail" name="email">
                                            </div>
                                        </div> -->
                                  
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Téléphone *</label>
                                                <input type="text" name="unformatedPhone" value="<%= user?.unformatedPhone %>"  class="form-control zcode30" required placeholder="Téléphone" data-intl-tel-input-id="0">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="">Photo</label>
                                                <input type="file" class="form-control" name="image">
                                            </div>
                                        </div>
                                       
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Quartier *</label>
                                                <select name="idQuartier" required aria-placeholder="Quartier" class="selectpicker" data-default="<%= user?.idQuartier %>"  data-flag="true">
                                                    <% quartiers.forEach((item)=>{ %>
                                                    <option value="<%= item._id %>" ><%= item.name %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Mot de passe *</label>
                                                <input  type="password" placeholder="Mode passe" class="form-control" name="password">
                                            </div>
                                        </div>
                                       
                                       
                                        <div class="col-md-12" style="display: flex;justify-content: center;">
                                            <button class="btn-hover btn-border-radius color-7 submit_all_ecole" type="submit" attr-type="save">Sauvegarder</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('../partials/footer')-%> 
<%- include('../partials/header') -%> 
<style>
    .avatarimg{
        border-radius: 50%;
        width: 4rem;
        height: 4rem;
        object-fit: cover;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;"><%= title %> </h3>
                        <h5 style="margin-top: 1rem;"><%= data.length %> occurence(s)</h5>
                        <div class="header-dropdown m-r--5">
                            <% if(type=='pays'){ %>
                               <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/locations/<%= type %>/add'">Ajouter</button>
                            <% } %>
                            <% if(type=='region'){ %>
                                <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/locations/<%= type %>/add?id_pays=<%= id_pays %>'">Ajouter</button>
                             <% } %>
                             <% if(type=='ville'){ %>
                                <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/locations/<%= type %>/add?id_pays=<%= id_pays %>&id_region=<%= id_region %>'">Ajouter</button>
                             <% } %>
                             <% if(type=='quartier'){ %>
                                <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/locations/<%= type %>/add?id_pays=<%= id_pays %>&id_region=<%= id_region %>&id_ville=<%= id_ville %>'">Ajouter</button>
                             <% } %>
                        </div>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <% if(type=='pays'){ %>
                                            <th>Code du pays</th>
                                        <% } %>
                                        <th>Nom</th>
                                        <th style="text-align: end;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((item)=>{ %>
                                    <tr>
                                        <% if(type=='pays'){ %>
                                            <td><%= item.code %></td>
                                        <% } %>
                                        <td >
                                            <%= item.name %> &nbsp;&nbsp;
                                         
                                        </td>
                                        
                                        <td style="text-align: end;">
                                           <% if(next!=''){ %>
                                            <% if(type=='pays'){ %>
                                               <a href="/dashboard/locations/<%= next %>?id_pays=<%= item._id %>" class="btn-hover btn-border-radius color-4 p-10"><i class="fa fa-eye"></i>  <%= next_title %></a>
                                            <% } %>
                                            <% if(type=='region'){ %>
                                                <a href="/dashboard/locations/<%= next %>?id_pays=<%= item.idPays %>&id_region=<%= item._id %>" class="btn-hover btn-border-radius color-4 p-10"><i class="fa fa-eye"></i>  <%= next_title %></a>
                                             <% } %>
                                             <% if(type=='ville'){ %>
                                                <a href="/dashboard/locations/<%= next %>?id_pays=<%= item.idPays %>&id_region=<%= item.idRegion %>&id_ville=<%= item._id %>" class="btn-hover btn-border-radius color-4 p-10"><i class="fa fa-eye"></i>  <%= next_title %></a>
                                             <% } %>
                                           <% } %>
                                        
                                            <a href="/dashboard/locations/<%= type %>/<%= item.id %>/edit" class="btn btn-tbl-edit" title="Modifier">
                                                <i class="material-icons">create</i>
                                            </a>
                                            <a href="/dashboard/location-delete/<%= type %>/<%= item.id %>" class="btn btn-tbl-edit btn-danger delete" title="Supprimer">
                                                <i class="material-icons">delete_sweep</i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 